  </div>
  <div class="bars">
  <!-- <section class="article-container"> -->

    <% data.forEach(item => { %>
    <div class="card">
      <div class="card-top">
        <img src="<%= item.image %>" alt=""/>
      </div>
      <div class="card-bottom">

        <div class="bottom-text-1">
          <h2><%= item.title %></h2> 
        </div>

        <div class="bottom-text-2">
          <p><%= item.measurements %></p>
          <h3>Color: <%= item.color %></h3>
          <h4><span style="color:black; font-family: Dancing script">Material:</span> <%= item.material %></h4>
        </div>

      </div> 
      <!-- card bottom closure -->
    </div>
    <!-- card closure -->



    <% }) %>
  </div>
